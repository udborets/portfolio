---
import Navbar from "@/components/Navbar/Navbar.astro";
import type { NavbarLinkProps } from "@/components/NavbarLink/NavbarLink.astro";

export interface HeaderProps {
  navbarLinks: NavbarLinkProps[];
}

const { navbarLinks } = Astro.props as HeaderProps;
---

<header
  class="header w-full h-fit flex justify-end p-4 fixed transition-all duration-1000 top-0 ease-in-out"
  id="header"
>
  <Navbar links={navbarLinks} />
</header>

<script>
  let prevScrollpos = window.pageYOffset;
  const a = document.getElementById("header") as HTMLElement;
  window.onscroll = function () {
    var currentScrollPos = window.pageYOffset;
    if (prevScrollpos > currentScrollPos) {
      a.style.top = "0";
    } else {
      a.style.top = "-10%";
    }
    prevScrollpos = currentScrollPos;
  };
</script>
