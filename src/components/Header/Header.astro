---
import Navbar from "@/components/Navbar/Navbar.astro";
import Title from "@/components/Title/Title.astro";
import type { NavbarLinkProps } from "@/components/NavbarLink/NavbarLink.astro";

export interface HeaderProps {
  navbarLinks: NavbarLinkProps[];
}

const { navbarLinks } = Astro.props as HeaderProps;
---

<header
  class="header w-full h-fit flex flex-col md:flex-row justify-around items-center flex-wrap py-2 px-4 fixed transition-all bg-dark-blue duration-1000 top-0 ease-in-out"
>
  <Title />
  <Navbar links={navbarLinks} />
</header>
