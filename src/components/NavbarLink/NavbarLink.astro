---
export interface NavbarLinkProps {
  href: string;
  text: string;
  hoverTitle: string;
}

const { href, text, hoverTitle } = Astro.props as NavbarLinkProps;
---

<a
  href={href}
  title={hoverTitle}
  class="navbarLink grid content-center text-[1.5rem] stylishText font-bold px-3 py-2 text-white brightness-50 hover:brightness-100 duration-[0.8s] ease-out transition-all"
>
  {text}
</a>
